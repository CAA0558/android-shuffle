<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:d="urn:import:com.google.gwt.user.datepicker.client"
        >

    <ui:style src="editAction.css"/>

    <g:HTMLPanel>
        <div class="{style.edit-form}">
            <div>
                <span>Description</span>
                <g:TextBox ui:field="description"/>
            </div>
            <div>
                <span>Project</span>
                <g:TextBox ui:field="project"/>
            </div>
            <div>
                <span>Context</span>
                <g:TextBox ui:field="context"/>
            </div>
            <div>
                <span>Details</span>
                <g:TextArea styleName="{style.details}" ui:field="details" visibleLines="3"/>
            </div>
        </div>
        <div class='{style.edit-form}'>
            <div>
                <span>Show from</span>
                <d:DateBox ui:field="from"/>
            </div>
            <div>
                <span>Due</span>
                <d:DateBox ui:field="due"/>
            </div>
        </div>
        <div class="{style.button-bar}">
            <g:Button ui:field="cancel" text="Cancel"/>
            <g:Button ui:field="save" text="Save"/>
            <g:Button ui:field="previous" text="Previous"/>
            <g:Button ui:field="next" text="Next"/>
        </div>
    </g:HTMLPanel>

</ui:UiBinder>
