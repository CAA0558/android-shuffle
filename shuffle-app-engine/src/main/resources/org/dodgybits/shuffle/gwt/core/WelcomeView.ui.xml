<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with type="org.dodgybits.shuffle.gwt.place.NameTokens" field="nameTokens" />

	<ui:style>
		.welcomeBox {
			width: 100%;
			height: 100%;
			background-color: lightBlue;
			color: blue;
			font-size: 24pt;
			font-weight: bold;
			text-align: center;
			display:table;
			border-radius: 8px;
			border: 3px solid blue;
		}
		
		.welcomeBox p {
			display:table-cell;
			vertical-align: middle;
		}
	</ui:style>

	<g:LayoutPanel>
		<g:layer left="10px" right="10px" top="10px" bottom="10px">
		<g:HTMLPanel styleName="{style.welcomeBox}" ui:field="mainPanel">
		<p>Welcome to this application!
		<g:HTML ui:field="dateField" />
		Pick your favorite color:<br />
		<g:InlineHyperlink targetHistoryToken="{nameTokens.getWelcome};col=lightBlue">blue</g:InlineHyperlink>
		<g:InlineHyperlink targetHistoryToken="{nameTokens.getWelcome};col=lightGreen">green</g:InlineHyperlink>
		<g:InlineHyperlink targetHistoryToken="{nameTokens.getWelcome};col=sandyBrown">brown</g:InlineHyperlink>
		<g:InlineHyperlink targetHistoryToken="{nameTokens.getWelcome};col=orange">orange</g:InlineHyperlink>
		<br />
		<g:InlineHyperlink targetHistoryToken="{nameTokens.getLogin}">Proceed to login...</g:InlineHyperlink>
		</p>
		</g:HTMLPanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>
