<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:c="urn:import:org.dodgybits.shuffle.gwt.core">

	<ui:with type="org.dodgybits.shuffle.gwt.place.NameTokens" field="nameTokens" />

	<ui:style>
		.loginBarBackground {
			width: 100%;
			border-radius: 8px 8px 0 0;
			background-color: blue;
		}

		.loginBarText {
			font-size: 12pt;
			width: 100%;
			color: white;
			text-align: right;			
		}
		
		.loginBarText a {
			color: white;
			font-weight: bold;
		}
		
		.mainPanelBackground {
			width: 100%;
			height: 100%;
			background-color: lightBlue;
			border: none;
			border-radius: 0 0 8px 8px;			
		}

		.mainPanelContent {
			color: black;
			font-size: 24pt;
			font-weight: bold;
			text-align: center;
		}
</ui:style>

	<g:DockLayoutPanel unit="EM">
		<g:north size="5">
			<g:HTMLPanel>
				<g:Label text="Header"/>
			</g:HTMLPanel>
		</g:north>
		<g:south size="5">
			<g:HTMLPanel>
				<g:Label text="footer"/>
			</g:HTMLPanel>
		</g:south>
		<g:west size="12">
			<g:HTMLPanel ui:field="navigation"/>
		</g:west>
		<g:center>
			<g:HTMLPanel ui:field="mainPanel"/>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
