<ui:UiBinder
    xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    
  <ui:image field='gradient' src='gradient_bg_dark.png' repeatStyle='Horizontal'/>
    
  <ui:style>
  .outer {
    border-left: 1px solid #999;
    border-bottom: 1px solid #999;
    cursor: pointer;
    cursor: hand;
  }

  @sprite .header {
    gwt-image: 'gradient';
    background-color: #d3d6dd;
    table-layout: fixed;
    width: 100%;
    height: 100%;
  }

  .header td {
    font-weight: bold;
    text-shadow: #fff 0 2px 2px;
    padding: 2px 0 1px 10px;
    border-top: 1px solid #999;
    border-bottom: 1px solid #999;
  }

  .table {
    table-layout: auto;
    width: 100%;
  }

  .table td {
    border-top: 1px solid #fff;
    border-bottom: 1px solid #fff;
    padding: 2px 0 2px 10px;
    white-space: nowrap;
  }
  </ui:style>
      
    <g:HTMLPanel>
    <div id="widget">
        <div id="header">
            <div ui:field="status" class="status none"></div>
            <p>Try out roundtripping data to App Engine.</p>
            <g:Button ui:field="sayHelloButton">Say Hello</g:Button>
        </div>

        <div id="message">
            <p>Send a poke to your Android device using Cloud to Device Messaging.</p>
            <div class="roundRect">
                <input ui:field="recipientArea" type="text" class="field" size="62"
                    placeholder="pat@example.com" />
                <textarea ui:field="messageArea" cols="46" rows="3" placeholder="Message" />
            </div>
			<g:Button ui:field="sendMessageButton">Send Message</g:Button>
        </div>

        <div id="fetcher">
            <g:Button ui:field="fetchTasksButton">Fetch Tasks</g:Button>
        </div>


        <div id="results">
	      <g:ScrollPanel>
	        <g:FlexTable ui:field='table' styleName='{style.table}' cellSpacing='0' cellPadding='0'/>
	      </g:ScrollPanel>
        </div>
        
        <div id="footer"><p>Powered by Big Daddyo</p></div>
    </div>
   </g:HTMLPanel>
</ui:UiBinder>
