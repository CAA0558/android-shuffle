<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with type="org.dodgybits.shuffle.gwt.place.NameTokens" field="nameTokens" />

	<ui:style>
		.loginBarBackground {
			width: 100%;
			border-radius: 8px 8px 0 0;
			background-color: blue;
		}

		.loginBarText {
			font-size: 12pt;
			width: 100%;
			color: white;
			text-align: right;			
		}
		
		.loginBarText a {
			color: white;
			font-weight: bold;
		}
		
		.mainPanelBackground {
			width: 100%;
			height: 100%;
			background-color: lightBlue;
			border: none;
			border-radius: 0 0 8px 8px;			
		}

		.mainPanelContent {
			color: black;
			font-size: 24pt;
			font-weight: bold;
			text-align: center;
		}
</ui:style>

	<g:LayoutPanel>
		<g:layer left="10px" right="10px" top="10px" height="25px">
		<g:HTML styleName="{style.loginBarBackground}" />
		</g:layer>
		<g:layer left="20px" right="20px" top="10px" height="25px">
		<g:HTMLPanel styleName="{style.loginBarText}">
		<div style="float: left;">&#x25C2; <g:InlineHyperlink targetHistoryToken="">back to welcome page</g:InlineHyperlink></div>
		<g:InlineHyperlink targetHistoryToken="{nameTokens.getLogin}">login</g:InlineHyperlink>&nbsp;|&nbsp;
		<g:InlineHyperlink targetHistoryToken="foobar">invalid</g:InlineHyperlink>&nbsp;|&nbsp;
		<g:InlineHyperlink targetHistoryToken="{nameTokens.getHelp}">help</g:InlineHyperlink>
		</g:HTMLPanel>
		</g:layer>
		<g:layer left="10px" top="35px" right="10px" bottom="10px">
		<g:HTMLPanel styleName="{style.mainPanelBackground}" />
		</g:layer>
		<g:layer left="20px" top="45px" right="20px" bottom="20px">
		<g:HTMLPanel ui:field="mainPanel" styleName="{style.mainPanelContent}" />
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>
