<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default' xmlns:d="urn:import:com.google.gwt.user.datepicker.client">

	<g:HTMLPanel>
		<div class="buttonBar">
			<g:Button ui:field="save" text="Save"/><br/>
		</div>
		<div class="editForm">
			<div>
				<span>Description</span>
				<g:TextBox ui:field="description" />
			</div>
			<div>
				<span>Project</span>
				<g:TextBox ui:field="project" />
			</div>
			<div>
				<span>Context</span>
				<g:TextBox ui:field="context" />
			</div>
			<div>
				<span>Details</span>
				<g:TextArea ui:field="details" />
			</div>
		</div>
		<div class='dates'>
			<div>
				<span>Show from</span>
				<d:DateBox ui:field="from" />
			</div>
			<div>
				<span>Due</span>
				<d:DateBox ui:field="due" />
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>
